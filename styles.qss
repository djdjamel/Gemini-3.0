/* Modern Soft Design for Gravity Stock Manager */

/* Main Application Window */
QMainWindow {
    background-color: #f5f7fa;
}

/* Tab Widget */
QTabWidget::pane {
    border: 1px solid #e1e4e8;
    background-color: #ffffff;
    border-radius: 8px;
    top: -1px;
}

QTabBar::tab {
    background-color: #f5f7fa;
    color: #586069;
    border: 1px solid #e1e4e8;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 8px 16px;
    margin-right: 2px;
    font-weight: 500;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    color: #0366d6;
    border-bottom: 2px solid #0366d6;
}

QTabBar::tab:hover {
    background-color: #e8eaed;
}

/* Buttons */
QPushButton {
    background-color: #0366d6;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-weight: 500;
    min-height: 24px;
}

QPushButton:hover {
    background-color: #0256c7;
}

QPushButton:pressed {
    background-color: #024bb3;
}

QPushButton:disabled {
    background-color: #d1d5da;
    color: #959da5;
}

/* Secondary Buttons */
QPushButton[class="secondary"] {
    background-color: #f6f8fa;
    color: #24292e;
    border: 1px solid #e1e4e8;
}

QPushButton[class="secondary"]:hover {
    background-color: #e8eaed;
    border-color: #d1d5da;
}

/* Table Action Buttons */
QPushButton#TableActionBtn {
    background-color: transparent;
    border: 1px solid #e1e4e8;
    border-radius: 4px;
    padding: 4px;
    min-width: 28px;
    min-height: 28px;
}

QPushButton#TableActionBtn:hover {
    background-color: #f6f8fa;
    border-color: #0366d6;
}

/* Input Fields */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    border: 1px solid #e1e4e8;
    border-radius: 6px;
    padding: 8px 12px;
    color: #24292e;
    selection-background-color: #0366d6;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #0366d6;
    padding: 7px 11px;
}

QLineEdit:disabled, QTextEdit:disabled {
    background-color: #f6f8fa;
    color: #959da5;
}

/* ComboBox */
QComboBox {
    background-color: #ffffff;
    border: 1px solid #e1e4e8;
    border-radius: 6px;
    padding: 8px 12px;
    color: #24292e;
    min-height: 20px;
}

QComboBox:hover {
    border-color: #0366d6;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 6px solid #586069;
    margin-right: 8px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #e1e4e8;
    border-radius: 6px;
    selection-background-color: #f6f8fa;
    selection-color: #24292e;
    padding: 4px;
}

/* Tables */
QTableWidget {
    background-color: #ffffff;
    border: 1px solid #e1e4e8;
    border-radius: 8px;
    gridline-color: #f0f2f5;
    selection-background-color: #f6f8fa;
    selection-color: #24292e;
}

QTableWidget::item {
    padding: 8px;
    border-bottom: 1px solid #f0f2f5;
}

QTableWidget::item:selected {
    background-color: #e8f0fe;
    color: #0366d6;
}

QHeaderView::section {
    background-color: #f6f8fa;
    color: #586069;
    padding: 10px 8px;
    border: none;
    border-bottom: 2px solid #e1e4e8;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 11px;
    letter-spacing: 0.5px;
}

QHeaderView::section:first {
    border-top-left-radius: 8px;
}

QHeaderView::section:last {
    border-top-right-radius: 8px;
}

/* Scrollbars */
QScrollBar:vertical {
    background-color: #f6f8fa;
    width: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #d1d5da;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #959da5;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    background-color: #f6f8fa;
    height: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #d1d5da;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #959da5;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
}

/* Labels */
QLabel {
    color: #24292e;
    font-size: 13px;
}

/* Group Boxes */
QGroupBox {
    background-color: #ffffff;
    border: 1px solid #e1e4e8;
    border-radius: 8px;
    margin-top: 12px;
    padding-top: 16px;
    font-weight: 600;
    color: #24292e;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 4px 12px;
    background-color: #f6f8fa;
    border-radius: 4px;
    margin-left: 8px;
}

/* Message Boxes */
QMessageBox {
    background-color: #ffffff;
}

QMessageBox QPushButton {
    min-width: 80px;
}

/* Dialogs */
QDialog {
    background-color: #f5f7fa;
}

/* Progress Bar */
QProgressBar {
    background-color: #f6f8fa;
    border: 1px solid #e1e4e8;
    border-radius: 6px;
    text-align: center;
    height: 20px;
}

QProgressBar::chunk {
    background-color: #0366d6;
    border-radius: 5px;
}

/* Spin Box */
QSpinBox, QDoubleSpinBox {
    background-color: #ffffff;
    border: 1px solid #e1e4e8;
    border-radius: 6px;
    padding: 6px 8px;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border: 2px solid #0366d6;
    padding: 5px 7px;
}

/* Check Box */
QCheckBox {
    spacing: 8px;
    color: #24292e;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #d1d5da;
    border-radius: 4px;
    background-color: #ffffff;
}

QCheckBox::indicator:checked {
    background-color: #0366d6;
    border-color: #0366d6;
}

QCheckBox::indicator:hover {
    border-color: #0366d6;
}

/* Radio Button */
QRadioButton {
    spacing: 8px;
    color: #24292e;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #d1d5da;
    border-radius: 9px;
    background-color: #ffffff;
}

QRadioButton::indicator:checked {
    background-color: #0366d6;
    border-color: #0366d6;
}

QRadioButton::indicator:hover {
    border-color: #0366d6;
}

/* Tool Tip */
QToolTip {
    background-color: #24292e;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 6px 10px;
    font-size: 12px;
}

/* Menu Bar */
QMenuBar {
    background-color: #ffffff;
    border-bottom: 1px solid #e1e4e8;
    padding: 4px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 6px 12px;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: #f6f8fa;
}

/* Menu */
QMenu {
    background-color: #ffffff;
    border: 1px solid #e1e4e8;
    border-radius: 6px;
    padding: 4px;
}

QMenu::item {
    padding: 8px 24px;
    border-radius: 4px;
}

QMenu::item:selected {
    background-color: #f6f8fa;
}

/* Status Bar */
QStatusBar {
    background-color: #f6f8fa;
    color: #586069;
    border-top: 1px solid #e1e4e8;
}
